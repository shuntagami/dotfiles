{
  // ===================
  // Editor
  // ===================
  "editor.tabSize": 2,
  "editor.guides.bracketPairs": true,
  "editor.cursorStyle": "block",
  "editor.fontFamily": "SourceHanCodeJP-Regular, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 15,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.find.globalFindClipboard": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.quickSuggestions": {
    "comments": "off",
    "strings": "off",
    "other": "off",
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
  },
  "editor.suggestSelection": "first",
  "editor.minimap.enabled": false,
  "editor.accessibilitySupport": "on",

  // ===================
  // Workbench
  // ===================
  "workbench.colorTheme": "Quiet Light",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.wrapTabs": true,
  "workbench.sideBar.location": "left",
  "workbench.colorCustomizations": {
    "statusBar.background": "#8ac6f2",
    "statusBar.noFolderBackground": "#8ac6f2",
    "statusBar.debuggingBackground": "#8ac6f2",
    "statusBar.foreground": "#444444",
    "statusBar.debuggingForeground": "#444444",
  },
  "workbench.editor.enablePreview": false,
  "workbench.editor.openPositioning": "last",
  "workbench.editor.restoreViewState": true,
  "workbench.editor.closeOnFileDelete": false,
  "workbench.editor.pinnedTabSizing": "shrink",
  // ===================
  // Window
  // ===================
  "window.clickThroughInactive": false,
  "window.title": "${activeEditorMedium}${separator}${rootName}",

  // ===================
  // Files
  // ===================
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // ===================
  // Breadcrumbs
  // ===================
  "breadcrumbs.enabled": true,

  // ===================
  // Git
  // ===================
  "git.openRepositoryInParentFolders": "always",

  // ===================
  // Vim
  // ===================
  "vim.statusBarColorControl": false,
  "vim.statusBarColors.normal": ["#8ac6f2", "#444444"],
  "vim.statusBarColors.insert": ["#95e454", "#444444"],
  "vim.statusBarColors.visual": ["#f2c68a", "#444444"],
  "vim.statusBarColors.visualline": ["#f2c68a", "#444444"],
  "vim.statusBarColors.visualblock": ["#f2c68a", "#444444"],
  "vim.statusBarColors.replace": ["#e5786d", "#444444"],
  "vim.useSystemClipboard": true,
  "vim.mouseSelectionGoesIntoVisualMode": false,
  "vim.autoSwitchInputMethod.enable": false,
  "vim.normalModeKeyBindings": [
    {
      "before": ["u"],
      "commands": ["undo"],
    },
    {
      "before": ["ctrl+r"],
      "commands": ["redo"],
    },
  ],
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-a>": false,
    "<C-w>": false,
    "<C-p>": false,
    "<C-b>": false,
  },
  // ===================
  // Prettier / JavaScript / TypeScript
  // ===================
  "prettier.prettierPath": "~/dotfiles/pkg/.anyenv/envs/nodenv/versions/24.9.0/lib/node_modules/prettier",
  "prettier.proseWrap": "preserve",
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  // ===================
  // Language Overrides
  // ===================
  "[makefile]": {
    "editor.insertSpaces": false,
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on",
    },
  },
  "[yaml]": {
    "editor.formatOnSave": false,
  },
  // ===================
  // Cursor
  // ===================
  "cursor.cpp.disabledLanguages": [],
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  // ===================
  // GitLens
  // ===================
  "gitlens.ai.model": "gitkraken",
  "gitlens.ai.gitkraken.model": "gemini:gemini-2.0-flash",
  // ===================
  // Claude Code
  // ===================
  "claudeCode.selectedModel": "opus",
  "claudeCode.preferredLocation": "panel",
  "extensions.ignoreRecommendations": true,
  "gitlens.views.scm.grouped.views": {
    "commits": true,
    "branches": true,
    "remotes": true,
    "stashes": true,
    "tags": true,
    "worktrees": true,
    "contributors": true,
    "fileHistory": false,
    "repositories": true,
    "searchAndCompare": true,
    "launchpad": false,
  },
}
