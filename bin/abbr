#!/usr/bin/env ruby

########################################
# HELP
########################################
HELP = <<~EOS
  display abbreviation

  $ abbr HTTP
  Hyper Text Transer Protocol
EOS

if ARGV[0] == "-h"
  puts HELP
  exit 0
end

def describe abbr
  case abbr
  when "ACID" then "Atomicity Consistency Isolation Durability"
  when "ACL" then "Access Control List"
  when "AES" then "Advanced Encryption Standard"
  when "ARP" then "Address Resolution Protocol"
  when "BASE" then "Basically Available Soft state Eventual consistency"
  when "CAP" then "Consistency Availability Partition-tolerance"
  when "CDN" then "Content Delivery Network"
  when "CORS" then "Cross Origin Resource Sharing"
  when "CSRF" then "Cross Site Request Forgery"
  when "DER" then "Distinguished Encoding Rules"
  when "DHCP" then "Dynamic Host Configuration Protocol"
  when "DNS" then "Domain Name System"
  when "FTP" then "File Transfer Protocol"
  when "FTPS" then "File Transfer Protocol over SSL/TLS"
  when "HMAC" then "Hash Based Message Authentication Code"
  when "HTTP" then "Hyper Text Transer Protocol"
  when "HTTPS" then "Hyper Text Transer Protocol over SSL/TLS"
  when "ICMP" then "Internet Control Message Protocol"
  when "IP" then "Internet Protocol"
  when "ISO" then "International Organization for Standardization"
  when "JPG" then "Joint Photographic Experts Group"
  when "MAC" then "Media Access Control Address"
  when "NAT" then "Network Address Translation"
  when "NAPT" then "Network Address Port Translation"
  when "OSI" then "Open Systems Interconnection"
  when "PEM" then "Privacy Enhanced Mail"
  when "PKCS" then "Public Key Cryptography Standards"
  when "PNG" then "Portable Network Graphics"
  when "RAID" then "Redundant Array of Independent Disk"
  when "REST" then "REpresentational State Transfer"
  when "RPC" then "Remote Procedure Call"
  when "SCP" then "Secure Copy Protocol"
  when "SFTP" then "SSH File Transfer Protocol"
  when "SHA" then "Secure Hash Algorithm"
  when "SLA" then "Service Level Agreement"
  when "SOAP" then "Simple Object Access Protocol"
  when "SMTP" then "Simple Mail Transfer Protocol"
  when "SMTPS" then "Simple Mail Transfer Protocol over SSL/TLS"
  when "SPF" then "Sender Policy Framework"
  when "SSH" then "Secure Shell"
  when "SSRF" then "Server Side Request Forgery"
  when "SSL" then "Secure Sockets Layer"
  when "TCP" then "Transmission Control Protocol"
  when "TLS" then "Transport Layer Security"
  when "UDP" then "User Datagram Protocol"
  when "WAF" then "Web Application Firewall"
  when "XSS" then "Crooo Site Scripting"
  else "Unknown"
  end
end

puts describe ARGV[0].upcase if ARGV[0]
