#!/usr/bin/env node

const amount = Number(process.argv[2]);

if (!amount || isNaN(amount)) {
  console.log("Usage: usd-to-jpy <amount>");
  process.exit(1);
}

fetch("https://api.exchangerate-api.com/v4/latest/USD")
  .then((res) => res.json())
  .then((data) => {
    const jpy = (amount * data.rates.JPY).toFixed(2);
    console.log(`${amount} USD is approximately ${jpy} JPY.`);
  });
